{
    "version": "1.0.0",
    "description": "Central configuration for PoW checkpoint system",

    "defaultCheckpoint": {
        "fields": [
            {
                "name": "whatLearned",
                "type": "textarea",
                "label": "Ce ai invatat in aceasta lectie?",
                "placeholder": "Descrie pe scurt conceptele principale pe care le-ai invatat...",
                "minChars": 30,
                "required": true,
                "hint": "Scrie cel putin 30 de caractere"
            },
            {
                "name": "whatCreated",
                "type": "textarea",
                "label": "Ce ai creat sau modificat?",
                "placeholder": "Descrie ce ai facut practic (proiect, cod, exercitii)...",
                "minChars": 20,
                "required": true,
                "hint": "Scrie cel putin 20 de caractere"
            }
        ]
    },

    "moduleOverrides": {
        "m2-scratch": {
            "additionalFields": [
                {
                    "name": "scratchUrl",
                    "type": "url",
                    "label": "Link proiect Scratch (optional)",
                    "placeholder": "https://scratch.mit.edu/projects/...",
                    "urlPattern": "scratch.mit.edu",
                    "optional": true,
                    "hint": "Daca ai salvat un proiect, pune link-ul aici"
                }
            ]
        },
        "m3-scratch-control": {
            "additionalFields": [
                {
                    "name": "scratchUrl",
                    "type": "url",
                    "label": "Link proiect Scratch (optional)",
                    "placeholder": "https://scratch.mit.edu/projects/...",
                    "urlPattern": "scratch.mit.edu",
                    "optional": true,
                    "hint": "Daca ai salvat un proiect, pune link-ul aici"
                }
            ]
        },
        "m5-proiect": {
            "additionalFields": [
                {
                    "name": "scratchUrl",
                    "type": "url",
                    "label": "Link proiect Scratch",
                    "placeholder": "https://scratch.mit.edu/projects/...",
                    "urlPattern": "scratch.mit.edu",
                    "required": true,
                    "hint": "Obligatoriu pentru lectiile de proiect"
                }
            ]
        }
    },

    "lessonOverrides": {
        "cls6-m3-scratch-control-lectia6-proiect-labirint": {
            "fields": [
                {
                    "name": "scratchUrl",
                    "type": "url",
                    "label": "Link proiect Scratch - Jocul Labirint",
                    "placeholder": "https://scratch.mit.edu/projects/...",
                    "urlPattern": "scratch.mit.edu",
                    "required": true,
                    "hint": "Link-ul catre jocul tau de labirint finalizat"
                },
                {
                    "name": "projectDescription",
                    "type": "textarea",
                    "label": "Descrie jocul tau",
                    "placeholder": "Explica ce face jocul, ce structuri de control ai folosit, ce a fost cel mai greu...",
                    "minChars": 50,
                    "required": true,
                    "hint": "Minim 50 de caractere"
                },
                {
                    "name": "whatLearned",
                    "type": "textarea",
                    "label": "Ce ai invatat din acest modul?",
                    "placeholder": "Recapituleaza conceptele invatate in toate cele 6 lectii...",
                    "minChars": 40,
                    "required": true
                }
            ]
        }
    },

    "sequentialLocking": {
        "enabled": true,
        "allowTeacherBypass": true,
        "teacherParam": "teacher"
    },

    "quizLimiter": {
        "enabled": true,
        "maxAttempts": 3,
        "minExplanationChars": 20
    },

    "ui": {
        "title": "Checkpoint",
        "submitButton": "Completeaza lectia",
        "successMessage": "Felicitari! Lectia a fost completata.",
        "lockedMessage": "Completeaza lectia anterioara mai intai!"
    },

    "xpRules": {
        "fullXpMaxAttempts": 2,
        "reducedXpMaxAttempts": 3,
        "fullXpMultiplier": 1.0,
        "reducedXpMultiplier": 0.5,
        "minimalXpMultiplier": 0.25
    }
}
