{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Worksheet Schema - Fise de lucru pe 3 niveluri",
  "description": "Schema pentru fisele de lucru verificabile cu AI",
  "version": "1.0.0",

  "structure": {
    "lesson_id": "Format: cls{N}/m{M}-{topic}/lectia{L}",
    "title": "Titlul lectiei",
    "levels": {
      "minim": {
        "nota_range": "5-6",
        "punctaj_max": 30,
        "description": "Cunostinte de baza - reproducere si recunoastere"
      },
      "standard": {
        "nota_range": "7-8",
        "punctaj_max": 35,
        "description": "Intelegere si aplicare - explica, compara, aplica"
      },
      "performanta": {
        "nota_range": "9-10",
        "punctaj_max": 35,
        "description": "Analiza si creatie - rezolva probleme noi, creeaza"
      }
    }
  },

  "item_types": {
    "mcq": {
      "description": "Intrebare cu variante de raspuns",
      "fields": ["question", "options", "correct", "points", "explanation"],
      "ai_verifiable": true,
      "auto_grade": true
    },
    "short": {
      "description": "Raspuns scurt (1-2 propozitii)",
      "fields": ["question", "answer_hints", "points", "rubric"],
      "ai_verifiable": true,
      "auto_grade": false
    },
    "explain": {
      "description": "Explicatie detaliata (3-5 propozitii)",
      "fields": ["question", "key_points", "points", "rubric"],
      "ai_verifiable": true,
      "auto_grade": false
    },
    "task": {
      "description": "Sarcina practica cu dovada",
      "fields": ["description", "steps", "evidence_type", "criteria", "points"],
      "evidence_types": ["screenshot", "url", "file", "description"],
      "ai_verifiable": true,
      "auto_grade": false
    },
    "scenario": {
      "description": "Scenariu aplicat - rezolva o problema reala",
      "fields": ["context", "problem", "requirements", "rubric", "points"],
      "ai_verifiable": true,
      "auto_grade": false
    },
    "debug": {
      "description": "Gaseste si corecteaza greseala",
      "fields": ["broken_example", "hint", "correct_version", "points"],
      "ai_verifiable": true,
      "auto_grade": false
    },
    "compare": {
      "description": "Compara doua concepte/metode",
      "fields": ["item_a", "item_b", "aspects", "points"],
      "ai_verifiable": true,
      "auto_grade": false
    },
    "create": {
      "description": "Creeaza ceva original pe baza cerintelor",
      "fields": ["requirements", "constraints", "evidence_type", "rubric", "points"],
      "ai_verifiable": true,
      "auto_grade": false
    }
  },

  "grading": {
    "total_points": 100,
    "distribution": {
      "minim": 30,
      "standard": 35,
      "performanta": 35
    },
    "nota_calculation": {
      "0-29": 4,
      "30-39": 5,
      "40-49": 6,
      "50-64": 7,
      "65-79": 8,
      "80-89": 9,
      "90-100": 10
    },
    "passing_per_level": {
      "minim": "66% din punctaj pentru nota 5-6",
      "standard": "66% din punctaj pentru nota 7-8",
      "performanta": "66% din punctaj pentru nota 9-10"
    }
  },

  "ai_verification": {
    "rubric_format": {
      "0": "Raspuns absent sau complet gresit",
      "partial": "Raspuns partial corect - punctaj proportional",
      "full": "Raspuns complet si corect"
    },
    "criteria_for_tasks": [
      "Sarcina completata conform cerintelor",
      "Dovada clara (screenshot/URL valid)",
      "Explicatie coerenta daca e ceruta"
    ]
  }
}
