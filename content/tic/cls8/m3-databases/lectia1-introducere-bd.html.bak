    <script>
        let answers = {};
        let correctCount = 0;

        function goToStep(step) {
            document.querySelectorAll('.section').forEach(s => s.classList.remove('active'));
            document.getElementById(step).classList.add('active');

            const steps = ['goal', 'try', 'learn', 'test'];
            const currentIndex = steps.indexOf(step);

            document.querySelectorAll('.step').forEach((s, i) => {
                s.classList.remove('active', 'completed');
                if (i < currentIndex) s.classList.add('completed');
                if (i === currentIndex) s.classList.add('active');
            });

            window.scrollTo({ top: 0, behavior: 'smooth' });
        }

        function toggleHint(el) {
            const content = el.nextElementSibling;
            content.classList.toggle('show');
        }

        function selectOption(el, questionId, isCorrect) {
            el.parentNode.querySelectorAll('.option').forEach(o => {
                o.classList.remove('selected', 'correct', 'wrong');
            });

            el.classList.add('selected');
            answers[questionId] = isCorrect;
        }

        function checkAllAnswers() {
            correctCount = 0;

            ['q1', 'q2', 'q3'].forEach(qId => {
                const question = document.getElementById(qId);
                const feedback = document.getElementById(qId + '-feedback');
                const selectedOption = question.querySelector('.option.selected');

                if (selectedOption) {
                    if (answers[qId]) {
                        selectedOption.classList.add('correct');
                        feedback.className = 'feedback success';
                        feedback.textContent = 'Corect!';
                        correctCount++;
                    } else {
                        selectedOption.classList.add('wrong');
                        feedback.className = 'feedback error';
                        feedback.textContent = 'Incearca din nou!';
                        question.querySelectorAll('.option').forEach(o => {
                            if (o.onclick.toString().includes('true')) {
                                o.classList.add('correct');
                            }
                        });
                    }
                }
            });

            const resultDiv = document.getElementById('test-result');

            if (correctCount === 3) {
                resultDiv.innerHTML = `
                    <div style="text-align: center; padding: 2rem; background: rgba(16, 185, 129, 0.2); border-radius: 12px; margin-top: 1rem;">
                        <div style="font-size: 3rem;">üåü</div>
                        <h3 style="color: var(--accent-green);">Excelent! 3/3 corecte!</h3>
                    </div>
                `;
                resultDiv.style.display = 'block';

                setTimeout(() => {
                    goToStep('complete');
                }, 2000);
            } else if (correctCount >= 2) {
                resultDiv.innerHTML = `
                    <div style="text-align: center; padding: 1rem; background: rgba(245, 158, 11, 0.2); border-radius: 12px; margin-top: 1rem;">
                        <h3 style="color: var(--accent-orange);">Bine! ${correctCount}/3 corecte. Poti continua!</h3>
                    </div>
                `;
                resultDiv.style.display = 'block';

                setTimeout(() => {
                    goToStep('complete');
                }, 2000);
            } else {
                resultDiv.innerHTML = `
                    <div style="text-align: center; padding: 1rem; background: rgba(239, 68, 68, 0.2); border-radius: 12px; margin-top: 1rem;">
                        <h3 style="color: var(--accent-red);">${correctCount}/3 - Reciteste lectia si incearca din nou!</h3>
                    </div>
                `;
                resultDiv.style.display = 'block';
            }
        }

        document.querySelectorAll('.step').forEach(step => {
            step.addEventListener('click', () => {
                goToStep(step.dataset.step);
            });
        });
